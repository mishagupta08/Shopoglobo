<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            async: false,
            url: "/Home/GetCategories",
            success: function (result) {
                $("#DivCategories").html(result);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Status: " + textStatus); alert("Error: " + errorThrown);
            }
        });

        $('#et_categ_box_scroll .cat-name').hover(
        function () { $('.drop-box-subcat', this).show() },
        function () { $('.drop-box-subcat', this).hide() }
    );
        $('#et_categ_box_scroll .sub-cat-name').hover(
            function () { $('.drop-box-subsubcat', this).toggle() }
        );
        $('#et_categ_box_scroll .subsub-cat-name').hover(
            function () { $('.drop-box-3subcat', this).toggle() }
        );
        $('#et_categ_box_scroll .3sub-cat-name').hover(
            function () { $('.drop-box-4subcat', this).toggle() }
        );

        $("#et_quick_find").submit(function () {
            var searchString = $("#search_input").val();

            uri = '/Home/SearchProductList?page=1&searchString=' + searchString;

            uri = uri.trim().replace(/ /g, '%20');
            window.location.href = (uri);
            return false;
        })

        $('.brandLink').click(
            function () {
                var brandid = $(this).attr("data-branId");
                window.location.href = "/Home/ProductList?BrandId="+brandid;
            }
        );

        getCartCount();
        getBalancePoints();

    });


    function getCartCount() {
        $.ajax({
            type: "GET",
            async: false,
            url: "/Home/getCartCount",
            success: function (result) {
                $("#cartCount").html(result);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Status: " + textStatus); alert("Error: " + errorThrown);
            }
        });
    }

    function getBalancePoints() {
        $.ajax({
            type: "GET",
            async: false,
            url: "/Home/getBalancePoints",
            success: function (result) {
                //alert(result);
                $("#ShowBalancePoint").html(result);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Status: " + textStatus); alert("Error: " + errorThrown);
            }
        });
    }


    function AddProductInCart(prodId, quantity) {
        $(".preloader").show();
        if (quantity == null || quantity == "" || quantity == undefined) {
            quantity = 1;
        }
        $.ajax({
            url: '/Manage/AddProductInToCart',
            type: 'Post',
            datatype: 'Json',
            data: { ProductId: prodId, Quantity: quantity }
        }).done(function (result) {
            if (result == null || result == undefined || result == "") {
                alert("Something went wrong, Please try again later.");
            }
            else if (result.Status == false) {
                if (result.ResponseValue == "login") {
                    window.location.href = "/Account/Login";
                }
                else {
                    alert(result.ResponseValue);
                }
            }
            else {
                alert("Product added to cart.");
                $("#cartCount").html(result.CartProductCount);
            }

            $(".preloader").hide();
        }).fail(function (error) {
            alert(error.statusText);
            $(".preloader").hide();
        });

        return false;
    }
</script>
